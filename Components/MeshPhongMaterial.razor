@using System.Drawing
@inject IJSRuntime JS

@code {
    private static uint IdCounter = 0;

    public uint Id = 0;

    [Parameter]
    public Color Color { get; set; } = Color.Aqua;

    [CascadingParameter]
    private Mesh mesh { get; set; } = null!;


    protected override async Task OnInitializedAsync()
    {
        if (mesh is null)
        {
            throw new ArgumentNullException(nameof(mesh), "phong material must exist within a mesh");
        }

        Id = Interlocked.Increment(ref IdCounter);
        await JS.InvokeVoidAsync("CreateMeshPhongMaterial", Id, $"#{Color.R:X2}{Color.G:X2}{Color.B:X2}");

        await mesh.SetMaterial(this);
    }
}