@using System.Drawing
@using Microsoft.JSInterop

@namespace BlazorThreeJs.Components.Materials

@implements IMaterial
@inject IJSRuntime JS

@code {
    public IJSObjectReference ObjRef { get; set; } = null!;

    [Parameter]
    public Color Color { get; set; } = Color.Aqua;

    [CascadingParameter]
    private IMaterialApplicable mesh { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        if (mesh is null)
        {
            throw new ArgumentNullException(nameof(mesh), "LineBasic must exist within a mesh");
        }

        ObjRef = await JS.InvokeAsync<IJSObjectReference>("CreateMeshToonMaterial", $"#{Color.R:X2}{Color.G:X2}{Color.B:X2}");

        await mesh.SetMaterial(this);
    }
}